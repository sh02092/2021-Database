<h1>{{ title }}</h1>

<table>
    <tr>
        <td>Dname</td>
        <td>Dnumber</td>
        <td>Mgr_ssn</td>
        <td>Mgr_start_date</td>
    </tr>
    <!-- data 있을 때마다 반복해서 실행 -->
    {{#each dept_res}}
        <!-- 값 수정을 위한 form 테그 -->
        <form method="post">
            <tr>
                <!-- input tag를 사용하여 입력 가능한 형태로 변경함(다른 방법도 검색하면 있음) -->
                <!-- placeholder : 입력하기 전에 보여지는 값 -->
                <td><input type="text" name = "dname" placeholder={{Dname}}></td>
                <td>{{Dnumber}}</td>
                <td>{{Mgr_ssn}}</td>
                <td>{{Mgr_start_date}}</td>
                <!-- formaction 속성을 확용하여 입력한 값을 넘겨줌), post에서 처리해야 하므로 post 있는 위치까지 가야 함 -->
                <td><input type="submit" value="수정" formaction="/update/department"></td>
            </tr>
        </form>
    {{/each}}
</table>